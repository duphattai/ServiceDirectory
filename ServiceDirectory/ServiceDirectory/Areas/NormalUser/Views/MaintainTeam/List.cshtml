
<div class="row" style="border: 1px ridge silver;">
    <div>
        <div class="row">
            @Ajax.ActionLink("Add", "Add_ActionLink", "MaintainTeam",
                                                            new AjaxOptions {  HttpMethod = "POST", UpdateTargetId = "team_popup", InsertionMode = InsertionMode.Replace, OnComplete = "set_attr_add_team_popup()" },
                                                                     new { @id = "add_team_link", @class = "btn btn-default col-md-offset-11 col-md-1" })
        </div>
        <div id="team_table" class="row">
            @Html.Action("GetListTeams", "MaintainTeam", new { page = 1 })
        </div>
    </div>
</div>

<script>
    function set_attr_add_team_popup() {
        $("#add_team_link").attr('data-toggle', 'modal');
        $("#add_team_link").attr('data-target', '#team_popup');
        $('#team_popup').modal('show');
        $('#department_popup').modal('hide');
    }

    function set_attr_edit_team_popup() {
        $("#edit_team_link").attr('data-toggle', 'modal');
        $("#edit_team_link").attr('data-target', '#team_popup');
        $('#team_popup').modal('show');
        $('#department_popup').modal('hide');
    }
</script>

