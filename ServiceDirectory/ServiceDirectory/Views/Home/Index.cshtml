<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

@using (Html.BeginForm("Logon", "Home", FormMethod.Post))
{
    <link href="~/Content/themes/Logon.css" rel="stylesheet" />
    <div class="text-center" style="padding:15px 0">
        <div class="logo">login</div>
        <!-- Main Form -->
        <div class="login-form-1">
            <form id="login-form" class="text-left">
                <div class="login-form-main-message"></div>
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label for="lg_username" class="sr-only">Username</label>
                            <input type="text" class="form-control" id="lg_username" name="lg_username" placeholder="username">
                        </div>
                        <div class="form-group">
                            <label for="lg_password" class="sr-only">Password</label>
                            <input type="password" class="form-control" id="lg_password" name="lg_password" placeholder="password">
                        </div>
                        <div class="form-group login-group-checkbox">
                            <input type="checkbox" id="lg_remember" name="lg_remember">
                            <label for="lg_remember">remember</label>
                        </div>
                    </div>
                    <button type="submit" class="login-button"><font color="blue">Submit</font></button>
                </div>
                <div class="etc-login-form">
                    <p>forgot your password? <a href="/Home/ForgotPassword">click here</a></p>
                    <p>new user? <a href="/Home/SignUp">create new account</a></p>
                    <p>@ViewBag.message</p>
                </div>
            </form>
        </div>
        <!-- end:Main Form -->
    </div>
}